      <category term="百度统计" scheme="http://www.wjchan.com/tags/%E7%99%BE%E5%BA%A6%E7%BB%9F%E8%AE%A1/"/>
    
      <category term="swiftype" scheme="http://www.wjchan.com/tags/swiftype/"/>
    
      <category term="阅读次数" scheme="http://www.wjchan.com/tags/%E9%98%85%E8%AF%BB%E6%AC%A1%E6%95%B0/"/>
    
